server {
    listen 80;
    server_name accounting.moshaver-amlak.com;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name accounting.moshaver-amlak.com;

    ssl_certificate /etc/nginx/ssl/cert.pem;
    ssl_certificate_key /etc/nginx/ssl/privatekey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers off;

    access_log /var/log/nginx/accounting.access.log;
    error_log  /var/log/nginx/accounting.error.log warn;
    client_max_body_size 20M;

    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    # Static files
    location /static/ {
        alias /home/apireal/real_estate_accouting/RealEstate_Accouting/accounting/staticfiles/;
        access_log off;
        expires 30d;
    }

    # Proxy to Gunicorn (Django)
    location / {
        proxy_pass http://127.0.0.1:9089;
        proxy_http_version 1.1;
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 90;
        proxy_connect_timeout 90;
    }

}

server {
    listen 10443 ssl http2;
    server_name accounting.moshaver-amlak.com;

    ssl_certificate /etc/nginx/ssl/cert.pem;
    ssl_certificate_key /etc/nginx/ssl/privatekey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers off;

    access_log /var/log/nginx/accounting.access.log;
    error_log  /var/log/nginx/accounting.error.log warn;
    client_max_body_size 50M;

    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location = / {
        return 301 /login/;
    }
    # Static files
    location /static/ {
        alias /home/apireal/real_estate_accouting/RealEstate_Accouting/accounting/staticfiles/;
        access_log off;
        expires 30d;
    }

    # Proxy to Gunicorn (Django)
    location / {
        proxy_pass http://127.0.0.1:9089;
        proxy_http_version 1.1;
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 200;
        proxy_connect_timeout 200;
    }

}
